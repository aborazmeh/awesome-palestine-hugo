{
  "plugins": [
    "prettier-plugin-go-template"
  ],
  "semi": false,
  "tabWidth": 2,
  "useTabs": false,
  "singleQuote": true,
  "trailingComma": "none",
  "bracketSpacing": true,
  "goTemplateBracketSpacing": true,
  "overrides": [
    {
      "files": [
        "*.html"
      ],
      "options": {
        "parser": "go-template"
      }
    },
    {
      "files": [
        "*.html",
        "*.css",
        "*.scss",
        "*.sass",
        "*.less",
        "*.styl"
      ],
      "options": {
        "singleQuote": false
      }
    }
  ]
}
